<div class="ui inverted vertical center aligned segment">
  <%= render partial: 'layouts/menu' %>
</div>
<div class="ui districts-wrapper container">
  <div class="ui basic segment">
    <h1 class="ui floated header">Districts</h1>
    <div class="ui search">
      <input class="prompt" type="text" placeholder="Search for a District">
      <div class="results"></div>
    </div>
    <h3 class="ui header">Districts with active surveys</h3>
    <table class="ui table">
      <thead>
        <tr>
          <th>District</th>
          <th>Number of Schools</th>
          <th>Number of Surveys</th>
        </tr>
      </thead>
      <tbody>
        <% @active_districts.each do |district| %>
          <tr class="positive">
            <td>
              <%= link_to district do %>
                <%= district.distname %>
                  <% end %>
            </td>
            <td>
              <%= district.schools.count %>
            </td>
            <td>
              <%= district.schools.joins(:surveys).count %>
            </td>
          </tr>
          <% end %>
      </tbody>
    </table>
    <h3 class="ui header">All districts</h3>
    <table class="ui table">
      <thead>
        <tr>
          <th>District</th>
          <th>Number of Schools</th>
          <th>Number of Surveys</th>
        </tr>
      </thead>
      <tbody>
        <% @districts.each do |district| %>
          <tr>
            <td>
              <%= link_to district do %>
                <%= district.distname %>
                  <% end %>
            </td>
            <td>
              <%= district.schools.count %>
            </td>
            <td>
              <%= district.schools.joins(:surveys).count %>
            </td>
          </tr>
          <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="3">
            <div class="ui right floated pagination menu">
              <%= paginate @districts %>
            </div>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>
</div>
