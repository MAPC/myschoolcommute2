<div class="ui inverted vertical center aligned segment">
  <%= render partial: 'layouts/menu' %>
</div>

<div class="ui container">
  <div class="ui basic segment">
    <h1 class="ui header"><%= @school.district.distname %>, <%= @school.name %></h1>
    <div class="ui grid">
      <div class="four wide column">
        <div class="ui segment">
          <h2 class="ui header">Summary</h2>
          <div class="ui list">
            <div class="item">
              <%= @school.recent_surveys_since %> surveys in past 24 hours
            </div>
            <div class="item">
              <%= @school.recent_surveys_since(1.week.ago) %> surveys in past week
            </div>
            <div class="item">
              <%= @school.total_surveys %> total surveys
            </div>
            <div class="item">
              <%= @school.has_active_survey? ? 'Survey is active' : 'No active surveys' %>
            </div>
          </div>
        </div>
        <div class="ui segment">
          <h2 class="ui header">Paper Surveys</h2>
        </div>
      </div>
      <div class="twelve wide column">
        <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/leaflet/1.0.3/leaflet.css">
        <div id="root"></div>
        <script type="text/javascript">
          window.endpoint = '/schools/<%= @school.id %>.json';
        </script>
        <%= javascript_include_tag "react_modules/schoolmap.min.js" %>
        <h3 class="ui header">Survey Instances</h3>
        <table class="ui striped table">
          <thead>
            <tr>
              <th>Surveys</th>
              <th>Status</th>
              <th>Report</th>
              <th>Begin</th>
              <th>End</th>
            </tr>
          </thead>
          <tbody>
            <% @school.surveys.each do |survey| %>
              <tr>
                <td><%= survey.survey_responses.count %></td>
                <td><%= survey.id %></td>
                <td>View</td>
                <td><%= survey.begin %></td>
                <td><%= survey.end %></td>
              </tr>              
            <% end %>
          </tbody> 
        </table>
      </div>
    </div>
  </div>
</div>